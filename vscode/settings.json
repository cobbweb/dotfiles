// Place your settings in this file to overwrite the default settings
{
  // WINDOW
  "window.newWindowDimensions": "maximized",
  "window.zoomLevel": 1,
  // EDITOR
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.tabCompletion": true,
  "editor.fontLigatures": true,
  "editor.rulers": [
    80
  ],
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "FuraCode Nerd Font, monospace",
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // EXPLORER
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": false,
  // MISC
  "vscode_custom_css.imports": [
    "file:///Users/cobbweb/.vscode.cobbweb.css"
  ],
  "vsicons.projectDetection.disableDetect": true,
  "zenMode.fullScreen": false,
  // rainbow brackets
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    [
      "MediumSpringGreen",
      "LightSkyBlue",
      "Orchid"
    ],
    "Red"
  ],
  // VIM!!!!!!!!!
  "vim.easymotion": true,
  "vim.leader": "\\",
  "vim.statusBarColorControl": true,
  "vim.enableNeovim": false,
  "scrolloff.scrolloff": 8,
  "vim.statusBarColors" : {
      "normal": "#44475a", // "Current Line"
      "insert": "#418b9a", // Based off Cyan
      "visual": "#7b52b7", // Based off Purple
      "visualline": "#b94989", // Based off Pink
      "visualblock": "#af7a42", // Based off Orange
      "replace": "#818837" // Based off Yellow
  },
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "s"],
      "after": ["<Esc>"],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        }
      ]
    },
    {
      "before": ["leader", "," ],
      "after": [],
      "commands": [
        {
          "command": "extension.toggleComma"
        }
      ]
    },
    {
      "before": [ "leader", ";" ],
      "after": [],
      "commands": [
        {
          "command": "extension.toggleSemicolon"
        }
      ]
    },
    {
      "before": [ "j", "j" ],
      "after": [ "<Esc>" ]
    }
  ],
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": [ "leader", "s" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        }
      ]
    },
    {
      "before": ["leader", "w"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": [ "H" ],
      "after": [ "^" ],
      "commands": []
    },
    {
      "before": [ "L" ],
      "after": [ "$" ],
      "commands": []
    },
    {
      "before": [ "leader", "p" ],
      "after": [],
      "commands": [
        { "command": "workbench.action.quickOpen" }
      ]
    },
    {
      "before": [ "leader", "," ],
      "after": [],
      "commands": [
        {
          "command": "extension.toggleComma"
        }
      ]
    },
    {
      "before": [ "leader", ";" ],
      "after": [],
      "commands": [
        {
          "command": "extension.toggleSemicolon"
        }
      ]
    },
    {
      "before": [ "leader", "b" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.toggleSidebarVisibility"
        }
      ]
    },
    {
      "before": [ "leader", "t" ],
      "after": [],
      "commands": [
        { "command": "workbench.view.explorer" }
      ]
    },
    {
      "before": [ "leader", "1" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusFirstEditorGroup"
        }
      ]
    },
    {
      "before": [ "leader", "2" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusSecondEditorGroup"
        }
      ]
    },
    {
      "before": [ "leader", "3" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusThirdEditorGroup"
        }
      ]
    },
    {
      "before": [ "leader", "v", "l" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.moveEditorToNextGroup"
        }
      ]
    },
    {
      "before": [ "leader", "v", "h" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.moveEditorToPreviousGroup"
        }
      ]
    },
    {
      "before": [ "leader", "v", "e" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.evenEditorWidths"
        }
      ]
    },
    {
      "before": [ "leader", "v", "m" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.maximizeEditor"
        }
      ]
    },
    {
      "before": [ "`", "`" ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.navigateBack"
        }
      ]
    }
  ],
  "vim.easymotionMarkerForegroundColorOneChar": "#f44730",
  // PLUGINS: GIT RELATED
  "gitlens.codeLens.visibility": "off",
  "gitlens.blame.annotation.message": true,
  // CORE CODE STYLE
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // HTML
  "html.format.indentInnerHtml": true,
  "html.format.endWithNewline": true,
  "html.suggest.angular1": false,
  "html.suggest.ionic": false,
  "auto-close-tag.activationOnLanguage": [
    "html",
    "xml",
    "javascript"
  ],
  // JavaScript/TypeScript
  "prettier.trailingComma": "all",
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.jsx": "javascript"
  },
  // ELM
  "elm-format.formatOnSave": true,
  "[elm]": {
    "editor.tabSize": 4
  },
  // SCSS
  "[scss]": {
    "editor.formatOnSave": false
  },
  "alignment.chars": {
    ":": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "::": {
      "spaceBefore": 0,
      "spaceAfter": 0
    },
    "=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "===": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "==": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "=>": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "+=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "-=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "*=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "/=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "from": {
      "spaceBefore": 1,
      "spaceAfter": 1
    }
  },
  "csscomb.formatOnSave": true,
  "csscomb.preset": "yandex",
  "[json]": {
    "editor.formatOnSave": false
  },
  "[haskell]": {
    "editor.formatOnSave": true
  },
  "typescript.check.tscVersion": false,
  "material-icon-theme.showWelcomeMessage": false,
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#44475a",
    "statusBar.noFolderBackground": "#44475a",
    "statusBar.debuggingBackground": "#44475a"
  },
  "vim.disableAnnoyingNeovimMessage": true,
  "vim.disableAnnoyingGcMessage": true,
  "vsicons.dontShowNewVersionMessage": true
}
